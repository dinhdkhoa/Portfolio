---
// Fundations
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
// Data
export const experienceData = [
  {
    period: "06/2025 - Present",
    companyName: "Bosch",
    companyLink: "https://www.bosch.vn",
    description: `Developed fullstack applications in React and Go for managing core logistics functions (stock and delivery tracking) and showcasing team capabilities via dedicated portfolios.`,
    position: "Fullstack Software Engineer",
  },
  {
    period: "10/2023 - 06/2025",
    companyName: "Indo Trans Logistics Corporation",
    companyLink: "https://www.itlvn.com",
    description: `Spearheaded frontend development for four major projects utilizing modern frameworks including Next.js, React, and Angular. Concurrently supporting the strategic initiative to migrate a .NET monolithic architecture to microservices.`,
    position: "Junior Software Engineer",
  },
    {
    period: "06/2023 - 10/2023",
    companyName: "True North Web Design",
    companyLink: "https://truenorthwebdesign.ca",
    description: `Helped create and update website content, SEO optimization, including text, images, and multimedia elements with WordPress.`,
    details: [
  "Create and update website content, including text, images, and multimedia elements with WordPress's CMS.",
  "Took the initiative to develop and implement a Python script automating content creation process, leading to an 80% reduction in time.",
  "Implemented e-commerce functionality, integrating WooCommerce to enable online product sales and payment.",
  "Utilized HTML, CSS, and JavaScript to enhance website functionality and improve the user experience."
],
    position: "Web Design/ Digital Marketing Intern",
  }
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 dark:text-base-100 font-bold uppercase"
        >
          Experience
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          experienceData.map((data) => (
            <article class="relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start group">
              <div class="lg:col-span-2">
                <Text
                  tag="a"
                  variant="textSM"
                  class="text-base-900 dark:text-base-100 font-bold uppercase"
                  href={data.companyLink}
                  target="_blank"
                >
                  {data.companyName}
                </Text>
                 <Text
                  tag="h4"
                  variant="textSM"
                  class="text-base-600 dark:text-base-400 mt-1"
                >
                  {data.position}
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class=" mt-1 text-base-600 dark:text-base-200"
                >
                  {data.description}
                </Text>
                
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-400   lg:ml-auto"
              >
                <time datetime={data.period}> {data.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
