---
// Assets
import nextSuper from "@/images/projects/next-super.jpg";
import shopeeClone from "@/images/projects/shopee-clone.png";
import goLeaderboard from "@/images/projects/go-leaderboard.png";
import netMicroservice from "@/images/projects/net-ms.png";
import { Image } from "astro:assets";

// Fundations
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Text from "@/components/fundations/elements/Text.astro";
// Icons
const data = [
  {
    image: shopeeClone,
    year: "2023",
    title: "Shopee Clone",
    link: "https://shopee-clone-omega.vercel.app/",
    description: `An e-commerce website built with React and Typescript.`,
  },
  {
    image: nextSuper,
    year: "2024",
    link: "#_",
    title: "Next.js Restaurant Management",
    description: `Restaurant management built with Next.js and TypeScript.`,
  },
  {
    image: netMicroservice,
    year: "2025",
    link: "#_",
    title: "C# Microservice",
    description: `Full scale microservice built with .NET and k8s.`,
  },
  {
    image: goLeaderboard,
    year: "2024",
    link: "#_",
    title: "Real-time Leaderboard",
    description: `High CCU application built with Go.`,
  },

 
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 dark:text-base-100 font-bold uppercase"
        >
          Projects
        </Text>
      </div>
      <div
        class="lg:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-y-12 gap-x-8"
      >
        {
          data.reverse().map((project) => (
            <article class=" relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <Image
                width={800}
                height={600}
                src={project.image}
                alt={project.title}
                class="lg:col-span-full aspect-12/7 object-cover object-top w-full"
              />
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-base-900 dark:text-base-100 font-bold uppercase"
                >
                  <a href={project.link}>
                    <>
                      <span class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl" />
                      <span class="relative z-10"> {project.title}</span>
                    </>
                  </a>
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="relative z-10 text-base-600 dark:text-base-400       "
                >
                  {project.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="relative z-10   flex items-center text-sm text-base-600 dark:text-base-400   lg:ml-auto"
              >
                <time datetime={project.year}> {project.year}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
