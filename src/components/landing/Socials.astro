---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const links = [
  {
    platform: "GitHub",
    url: "https://github.com/dinhdkhoa",
  },
  {
    platform: "Linkedin",
    url: "https://www.linkedin.com/in/dinhkhoa",
  },
  {
    platform: "Email",
    url: "mailto:kddinh212@gmail.com",
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200"
      id="socials"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 dark:text-base-100 font-bold uppercase">Socials</Text
        >
      </div>
      <div class="flex flex-col gap-2 lg:col-span-2">
        {
          links.map((social) => (
            <Text
              tag="a"
              variant="textXS"
              class="text-base-900 dark:text-base-100 hover:text-base-500    font-bold uppercase"
              href={social.url}
            >
              {social.platform}
            </Text>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
