---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Data
const data = [
      {period: "2018 - 2021",
    title: "Internet Web Development & Mobile Application",
    description: `Focused on Swiss design principles, grid systems, and typography. Completed a thesis on the impact of modernist design on digital interfaces.`,
    school: "Algonquin College",
    schoolLink: "https://www.algonquincollege.com"
  }
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200"
    >
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text
          tag="h2"
          variant="textSM"
          class="text-base-900 dark:text-base-100 font-bold uppercase"
        >
          Education
        </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((data, index) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class="text-base-900 dark:text-base-100 font-bold uppercase"
                >
                  {data.title}
                </Text>
                <Text
                  tag="a"
                  variant="textSM"
                  class="text-base-600 dark:text-base-400 mt-1"
                  href={data.schoolLink}
                  target="_blank"
                >
                  {data.school}
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class=" mt-1 text-base-200        "
                >
                  {data.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="text-base-600 dark:text-base-400   lg:ml-auto"
              >
                <time datetime={data.period}> {data.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
